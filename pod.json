{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "opensips"
        },
        "name": "opensips-deployment",
        "namespace": "default"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "opensips"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "opensips"
                }
            },
            "spec": {
                "containers": [
                    {
                        "args": [
                            "while true; do sleep 10; done;"
                        ],
                        "command": [
                            "/bin/bash",
                            "-c",
                            "--"
                        ],
                        "image": "chetangautamm/repo:Opensips_Build",
                        "imagePullPolicy": "Always",
                        "name": "opensips",
                        "ports": [
                            {
                                "containerPort": 5060
                            }
                        ]
                    }
                ],
                "nodeName": "node3"
            }
        }
    }
}



